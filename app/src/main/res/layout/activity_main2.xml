<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    tools:context=".MainActivity2">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/image111" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/image222" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:src="@drawable/image333" />

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/image444" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/image555" />

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/image666" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>